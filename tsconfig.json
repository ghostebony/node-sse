{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "dist",
		"removeComments": true,
		"importsNotUsedAsValues": "error",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
